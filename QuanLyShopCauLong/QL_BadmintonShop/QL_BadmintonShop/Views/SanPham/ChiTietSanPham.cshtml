@model QL_BadmintonShop.Models.SANPHAM
@{
    ViewBag.Title = "ChiTietSanPham";
    Layout = null;
}


<div class="section">
        <!-- container -->
        <div class="container">
            <!-- row -->
            <div class="row">
                <!--  Product Details -->
                <div class="product product-details clearfix">
                    <div class="col-md-6">
                        <div id="product-main-view">
                            <div class="product-view big-image hover-zoom">

                                @*<img src="@Url.Content("~/Assets/img/HinhAnh_SanPham/" + Model.HINHANH)" alt="">*@
                                <img src="~/Assets/img/HinhAnh_SanPham/@Model.HINHANH" alt="">
                            </div>
                            <div class="product-view">
                                @*<img src="@Url.Content("~/Assets/img/HinhAnh_SanPham/" + Model.HINH2)" alt="">*@
                                <img src="~/Assets/img/HinhAnh_SanPham/@Model.HINH2" alt="">
                            </div>
                            <div class="product-view">
                                @*<img src="@Url.Content("~/Assets/img/HinhAnh_SanPham/" + Model.HINH3)" alt="">*@
                                <img src="~/Assets/img/HinhAnh_SanPham/@Model.HINH3" alt="">
                            </div>
                        </div>
                        <div id="product-view">
                            <div class="product-view">

                                @*<img src="@Url.Content("~/Assets/img/HinhAnh_SanPham/" + Model.HINHANH)" alt="">*@
                                <img src="~/Assets/img/HinhAnh_SanPham/@Model.HINHANH" alt="">
                            </div>
                            <div class="product-view">
                                @*<img src="@Url.Content("~/Assets/img/HinhAnh_SanPham/" + Model.HINH2)" alt="">*@
                                <img src="~/Assets/img/HinhAnh_SanPham/@Model.HINH2" alt="">
                            </div>
                            <div class="product-view">
                                @*<img src="@Url.Content("~/Assets/img/HinhAnh_SanPham/" + Model.HINH3)" alt="">*@
                                <img src="~/Assets/img/HinhAnh_SanPham/@Model.HINH3" alt="">
                            </div>

                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="product-body">
                            <div class="product-label">
                                <span>New</span>
                                <span class="sale">-20%</span>
                            </div>
                            <h2 class="product-name">@Model.TENSP</h2>
                            <h3 class="product-price">@string.Format("{0:0,0}", Model.GIABAN)VNĐ</h3>
                            <div>
                                <div class="product-rating">
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star-o empty"></i>
                                </div>
                                <a href="#">3 Review(s) / Add Review</a>
                            </div>
                            <p><strong>Availability:</strong> In Stock: @Model.SOLUONG</p>
                            <p><strong>Brand:</strong> Yonex </p>
                            <p>
                                @Model.MOTASP
                            </p>

                            <div class="product-btns">
                                <div class="qty-input">
                                    <span class="text-uppercase">QTY: </span>
                                    <input class="input" type="number">
                                </div>
                                <button class="primary-btn add-to-cart"><i class="fa fa-shopping-cart"></i> Add to Cart</button>
                                <div class="pull-right">
                                    <button class="main-btn icon-btn"><i class="fa fa-heart"></i></button>
                                    <button class="main-btn icon-btn"><i class="fa fa-exchange"></i></button>
                                    <button class="main-btn icon-btn"><i class="fa fa-share-alt"></i></button>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>


                <!-- /Product Details -->
            </div>
            <!-- /row -->
        </div>
        <!-- /container -->
    </div>


